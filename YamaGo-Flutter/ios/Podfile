require 'fileutils'

def replace_firebase_import(plugin_name, replacement, legacy_patterns = [])
  classes_dir = File.join(__dir__, ".symlinks/plugins/#{plugin_name}/ios/Classes")
  return unless Dir.exist?(classes_dir)

  Dir.glob(File.join(classes_dir, '**/*.h')).each do |header|
    contents = File.read(header)
    next unless contents.include?('#import <Firebase/Firebase.h>') ||
                legacy_patterns.any? { |pattern| contents.include?(pattern) }

    FileUtils.chmod('u+w', header)
    updated = contents.gsub('#import <Firebase/Firebase.h>', replacement)
    legacy_patterns.each do |pattern|
      updated = updated.gsub(pattern, replacement)
    end
    File.write(header, updated) if contents != updated
  end
end

# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
    end

    next unless target.name == 'BoringSSL-GRPC'

    target.source_build_phase.files.each do |build_file|
      flags = build_file.settings && build_file.settings['COMPILER_FLAGS']
      next unless flags&.include?('-GCC_WARN_INHIBIT_ALL_WARNINGS')

      build_file.settings['COMPILER_FLAGS'] = flags.gsub('-GCC_WARN_INHIBIT_ALL_WARNINGS', '')
    end
  end

  grpc_fix_paths = [
    File.join(__dir__, 'Pods/gRPC-Core/src/core/lib/promise/detail/basic_seq.h'),
    File.join(__dir__, 'Pods/gRPC-C++/src/core/lib/promise/detail/basic_seq.h')
  ]

  grpc_fix_paths.each do |path|
    next unless File.exist?(path)
    FileUtils.chmod('u+w', path)
    contents = File.read(path)
    replacement =
      contents.gsub('Traits::template CallSeqFactory', 'Traits::CallSeqFactory')
    File.write(path, replacement) if contents != replacement
  end

  replace_firebase_import(
    'firebase_messaging',
    "@import FirebaseCore;\n@import FirebaseMessaging;\n@import FirebaseAuth;",
    ["#import <FirebaseCore/FirebaseCore.h>\n#import <FirebaseMessaging/FirebaseMessaging.h>\n#import <FirebaseAuth/FirebaseAuth.h>"]
  )

  replace_firebase_import(
    'firebase_auth',
    "@import FirebaseCore;\n@import FirebaseAuth;",
    ["#import <FirebaseCore/FirebaseCore.h>\n#import <FirebaseAuth/FirebaseAuth.h>"]
  )

  replace_firebase_import(
    'firebase_storage',
    "@import FirebaseCore;\n@import FirebaseStorage;",
    ["#import <FirebaseCore/FirebaseCore.h>\n#import <FirebaseStorage/FirebaseStorage.h>"]
  )
end
